{
    "name": "Project Configuration",
    "description": "Basic project settings and configuration",
    "patterns": ["**/*"],
    "rules": {
        "project": {
            "name": "DwellApp",
            "description": "A Swift-based property management application",
            "type": "swift",
            "version": "1.0.0",
            "root": ".",
            "mainBranch": "main"
        },
        "ignore": [
            ".git",
            "build",
            ".build",
            "*.generated.swift",
            "Pods"
        ],
        "search": {
            "exclude": [
                ".git",
                "build",
                ".build",
                "*.generated.swift",
                "Pods"
            ]
        }
    }
} 